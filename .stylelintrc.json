{
  "plugins": ["stylelint-order"],
  "rules": {
    "order/properties-order": [
      [
        "z-index",
        "position",
        "inset",
        "left",
        "right",
        "top",
        "bottom",
        "justify-self",
        "flex-grow",
        "flex-shrink",
        "box-sizing",
        "width",
        "min-width",
        "max-width",
        "height",
        "min-height",
        "max-height",
        "margin",
        "margin-left",
        "margin-right",
        "margin-top",
        "margin-bottom",
        "box-shadow",
        "outline",
        "outline-offset",
        "border",
        "border-left",
        "border-right",
        "border-top",
        "border-bottom",
        "border-radius",
        "clip",
        "clip-path",
        "background",
        "background-color",
        "padding",
        "gap",
        "display",
        "flex-direction",
        "justify-items",
        "justify-content",
        "align-items",
        "align-content",
        "grid-template-rows",
        "grid-template-columns",
        "grid-auto-flow",
        "grid-auto-rows",
        "grid-auto-columns",
        "overflow",
        "font-family",
        "font-size",
        "font-weight",
        "font-display",
        "font-style",
        "color"
      ],
      {
        "unspecified": "bottomAlphabetical",
        "emptyLineBeforeUnspecified": "always"
      }
    ]
  }
}
